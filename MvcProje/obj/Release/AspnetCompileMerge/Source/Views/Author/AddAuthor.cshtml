@{
    ViewBag.Title = "AddAuthor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Author/AddAuthor/" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Yazar Adı Soyadı <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="AuthorName" name="AuthorName" minlength="5" type="text" required />
            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input required type="file" class="form-control" name="AuthorImage" accept=".jpg,.png,.jpeg" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Yazar Yetenekler <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="AboutShort" required class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Yazarın Statüsü <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="AuthorTitle" required class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Mail Adresi <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="Mail" required class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Şifre <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="Password" required class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Telefon <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="PhoneNumber" required class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Hakkında <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="AuthorAbout" required class="form-control"></textarea>
            </div>
        </div>
      
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-default" type="button"><a href="/Author/AuthorList/">İptal</a></button>
            </div>
        </div>
    </form>
</div>
